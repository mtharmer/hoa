<div id="<%= dom_id user %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-bold mb-1">Name:</strong>
    <%= user.name %>

    <h2 class='font-bold'>Admin:</h2>
    <p><%= user.admin ? 'Yes' : 'No' %></p>

    <h2 class='font-bold'>Locked:</h2>
    <p><%= user.locked ? 'Yes' : 'No' %></p>
  </div>
</div>
