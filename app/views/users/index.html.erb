<% content_for :title, 'Users' %>

<div class="w-full">
  <div id="users">
    <% if @users.any? %>
      <div class="pb-5 sm:pb-0">
        <table class='w-full'>
          <thead>
            <tr>
              <th class="text-left">Name</th>
              <th class="text-left">Email</th>
              <th class="text-left">Address</th>
              <th class="text-left">Admin</th>
              <th class="text-left">Locked</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td class="py-2"><%= user.name %></td>
                <td class="py-2"><%= user.email %></td>
                <td class="py-2"><%= user.address&.address || 'No Address' %></td>
                <td class="py-2"><%= user.admin? ? 'Yes' : 'No' %></td>
                <td class="py-2"><%= user.locked ? 'Yes' : 'No' %></td>
                <td class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
                  <%= link_to 'Show', user, class: 'w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium' %>
                  <%= link_to 'Edit', edit_user_path(user), class: 'w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium' %>
                  <%= button_to 'Delete', user, method: :delete, class: 'w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer', data: { turbo_confirm: 'Are you sure?' } %>
                </div>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-center my-10">No users found.</p>
    <% end %>
  </div>
</div>
