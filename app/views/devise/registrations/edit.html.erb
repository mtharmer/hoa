<div class='flex justify-center items-center'>
  <div class='flex flex-col justify-center'>
    <div class='flex flex-row mb-8'>
      <h2 class='font-bold text-2xl'>Edit <%= resource_name.to_s.humanize %></h2>
    </div>

    <div class='flex flex-row ml-4'>
      <div class='flex flex-col shadow shadow-slate-400 p-4'>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render 'devise/shared/error_messages', resource: resource %>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'border rounded-sm bg-slate-100 min-w-52' %>
          </div>

          <div class="field">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: 'new-password', class: 'border rounded-sm bg-slate-100' %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'border rounded-sm bg-slate-100' %>
          </div>

          <div class="field">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: 'current-password', class: 'border rounded-sm bg-slate-100' %>
          </div>

          <div class="actions">
            <%= f.submit 'Update', class: 'button cursor-pointer text-white bg-blue-700 rounded-md px-4 py-1 mt-4 mb-8' %>
          </div>
        <% end %>

        <div>Unhappy? <%= button_to 'Cancel my account', registration_path(resource_name), data: { confirm: 'Are you sure?', turbo_confirm: 'Are you sure?' }, method: :delete, class: 'button cursor-pointer underline' %></div>

        <%= link_to 'Back', :back, class: 'underline' %>
      </div>
    </div>
  </div>
</div>
