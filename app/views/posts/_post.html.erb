<div id="<%= dom_id post %>" class="w-full sm:w-auto my-5 space-y-5">
  <div class='p-4'>
    <strong class="block font-medium mb-1"><%= "#{post.user.name} - #{post.user.address&.address}" %></strong>
    <p class='whitespace-pre-wrap'><%= post.message %></p>
    
    <%= button_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'mt-4 text-red-600 hover:text-red-500' %>
  </div>
</div>
