<%= form_with(model: post, class: 'contents') do |form| %>
  <div class="my-5">
    <%= form.label :message %>
    <%= form.text_area :message, rows: 4, class: ['block shadow-sm rounded-md border px-3 py-2 mt-2 w-full', { 'border-gray-400 focus:outline-blue-600': post.errors[:message].none?, 'border-red-400 focus:outline-red-600': post.errors[:message].any? }] %>
  </div>

  <div class="inline">
    <%= form.submit class: 'w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer' %>
  </div>
<% end %>
